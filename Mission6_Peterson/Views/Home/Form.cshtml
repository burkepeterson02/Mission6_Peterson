
@{
    ViewData["Title"] = "Form";
}

<h2>Movie Form</h2>
<p>Use this form to add a movie to the database</p>

@model Mission6_Peterson.Models.MovieModel


<form method="post">

    @if (Model != null && Model.MovieId != 0)
    {
        <input type="hidden" asp-for="MovieId" />
    }

    <label asp-for="Title">Title:</label>
    <input asp-for="Title" required/>
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" required/>
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="CategoryId">Category:</label>
    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @if (ViewBag.Categories != null)
        {
            foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        }
    </select>

        
    <br />

    <label asp-for="Director">Director:</label>
    <input asp-for="Director" required/>
    <br />

    <label asp-for="Edited">Edited (if applicable):</label>
    <select asp-for="Edited">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <label asp-for="CopiedToPlex">Copied to Plex:</label>
    <select asp-for="CopiedToPlex">
        <option value="1">Yes</option>
        <option value="0">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To (if applicable):</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes (if applicable):</label>
    <input asp-for="Notes" maxlength="25"/>
    <br />

    @Html.ValidationMessageFor(m => m.Year)

    <button type="submit">Submit Movie</button>
</form>
